<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="helloDialog"
        title="Hello year {/year}"
    >   
        <content>
            <core:Icon 
                src="sap-icon://hello-world"
                size="8rem"
                class="sapUiDediumMargin"
            />
        </content>
        <beginButton>
            <Button
                text="Close"
                press="onCloseHelloDialog"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
