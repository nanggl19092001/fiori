<mvc:View
    controllerName="fiori.walkthrough.controller.ApplicationList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
>
    <Page title="{i18n>applicationPageTitle}">
        <content>
            <Panel class="sapUiSmallMarginTop">
                <f:GridContainer width="100%">
                    <f:layout>
                        <f:GridContainerSettings
                            rowSize="84px"
                            columnSize="84px"
                            gap="8px"
                        />
                    </f:layout>
                    <f:layoutXS>
                        <f:GridContainerSettings
                            rowSize="70px"
                            columnSize="70px"
                            gap="8px"
                        />
                    </f:layoutXS>

                    <GenericTile
                        header="{i18n>walkthroughTileHeader}"
                        subheader="{i18n>walkthroughTileSubheader}"
                        press=".onPress"
                        id="walkthrough"
                    >
                        <layoutData>
                            <f:GridContainerItemLayoutData
                                minRows="2"
                                columns="2"
                            />
                        </layoutData>
                    </GenericTile>
                </f:GridContainer>
            </Panel>
        </content>
    </Page>
</mvc:View>
