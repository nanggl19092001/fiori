<mvc:View
    controllerName="fiori.walkthrough.controller.ApplicationList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
>
    <Page title="{i18n>applicationPageTitle}">
        <subHeader>
            <Bar id="searchBar">
                <contentMiddle>
                    <SearchField
                        id="idSearchField"
                        liveChange=".onSearch"
                    />
                </contentMiddle>
            </Bar>
        </subHeader>
        <content>
            <Panel
                class="sapUiSmallMarginTop"
                expandable="true"
                expanded="true"
                width="100%"
                content="{capAppList>/App}"
                headerText="{i18n>applicationHeaderText}"
            >
                <GenericTile
                    header="{capAppList>header}"
                    subheader="{capAppList>subheader}"
                    press=".onPress"
                    class="tile_padding"
                >
                    <layoutData>
                        <f:GridContainerItemLayoutData
                            minRows="2"
                            columns="2"
                        />
                    </layoutData>
                </GenericTile>
            </Panel>
        </content>
    </Page>
</mvc:View>
